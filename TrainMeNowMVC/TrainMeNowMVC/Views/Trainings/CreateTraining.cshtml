@model TrainMeNowMVC.Models.TrainingViewModel
@{
    ViewBag.Title = "CreateTraining";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateTraining</h2>

@using (Html.BeginForm("CreateTrainingData", "Trainings", FormMethod.Get))
{
    <label>Name:</label>
    @Html.TextBoxFor(m => m.Name)

    <label>Price: </label>
    @Html.TextBoxFor(m => m.Price)

    <label>MaxUsers:</label>
    @Html.TextBoxFor(m => m.MaxUsers)

    <button class="btn btn-success" type="submit">Submit</button>
}

