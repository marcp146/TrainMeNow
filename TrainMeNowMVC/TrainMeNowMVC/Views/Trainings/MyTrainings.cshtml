@model List<TrainMeNowMVC.Models.UserTrainingsViewModel>
@{
    ViewBag.Title = "MyTrainings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Currently Enrolled Trainings</h2>
</div>
<table class="table table-striped">
    <tr>
        <th>
            Training Name
        </th>
        <th>
            Trainer Name
        </th>
        <th>
            Training Description
        </th>
        <th>
            Contact
        </th>
    </tr>


    @foreach (var list in Model)
    {
        <tr>
            <td>
                @list.Name
            </td>

            <td>
                @list.Trainer
            </td>
            <td>
                Aici vine descriptionu
            </td>
            <td>
                @list.Email
            </td>
        </tr>
    }
</table>
