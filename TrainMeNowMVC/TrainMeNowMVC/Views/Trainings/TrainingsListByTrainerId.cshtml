@model IEnumerable<TrainMeNowMVC.Models.TrainingViewModel>
@{
    ViewBag.Title = "TrainingsListByTrainerId";
}

<h2>Trainings List:</h2>
<p>
    @Html.ActionLink("Create New", "CreateTraining")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxUsers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerId)
        </th>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxUsers)
            </td>
            <td>
                @Html.ActionLink("Edit Trainings", "EditTraining", new { controller = "Trainings", id = item.Id }, new { @class = "btn btn-info" })
            </td>
        </tr>
        }

    </table>



