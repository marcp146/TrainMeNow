
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Change Password</h2>
@using (Html.BeginForm("ChangePass", "Account", FormMethod.Post))
{
    <table class="table">
        <tr>
            <td>Old Password: </td>
            <td>@Html.TextBox("oldPass","", new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>New Password: </td>
            <td>@Html.TextBox("newPass", "", new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Confirm New Password: </td>
            <td>@Html.TextBox("verifyPass", "", new { @class = "form-control" })</td>
        </tr>
    </table>
    <button type="submit" class="btn btn-primary">Change Password</button>
}

