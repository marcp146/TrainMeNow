@model List<TrainMeNowMVC.Models.UserViewModel>
@{
    ViewBag.Title = "Manage Trainers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Trainers</h2>

@using (@Html.BeginForm("ManageTrainers", "Admin", FormMethod.Post))
{
    <table class="table table-hover">
        <tr>
            <th width="20%">Username</th>
            <th width="20%">First Name</th>
            <th width="20%">Last Name</th>
            <th width="20%">Email</th>
            <th width="20%">Is Trainer</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td><input type="checkbox" id="@user.Username" name="selectedIds" value="@user.Id" /></td>
            </tr>
        }
    </table>
}
